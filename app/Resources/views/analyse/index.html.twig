{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/vendor/datatables/media/css/dataTables.bootstrap.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/analyse.css') }}" rel="stylesheet" />
{% endblock %}

{% block appWindow %}
    {% block analyse_creation %}
        <div class="col-lg-12 panel">
            <div class="panel-heading">
                <h1 class="panel-title">My analyses</h1>
            </div>
            <div class="col-lg-3">
                {{ form_start(analyse_creation_form) }}
                {{ form_widget(analyse_creation_form) }}
                {{ form_end(analyse_creation_form) }}
            </div>
            <div class="col-lg-9">
                {% block analyse_list %}
                    {{ render(controller('AppBundle:Analyse:getUserAnalysesList')) }}
                {% endblock %}
            </div>
        </div>
    {% endblock %}
    {% block analyse_params %}
        <div class="col-lg-12 panel">
            <div class="panel-heading">
                <h1 class="panel-title">Parameters</h1>
            </div>
            <div class="col-lg-3">
                {% block param_creation %}
                    {{ render(controller('AppBundle:Param:paramform')) }}
                {% endblock %}
            </div>

            <div class="col-lg-9">
                {% block analyse_datatable %}
                    {{ render(controller('AppBundle:Datatable:index')) }}
                {% endblock %}
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 'additionnal_javascript' %}
        <script src="{{ asset('assets/vendor/datatables/media/js/jquery.dataTables.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/vendor/datatables/media/js/dataTables.bootstrap.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/analyse.js') }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}