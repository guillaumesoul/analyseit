<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}Analyse it!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/layout.css') }}" rel="stylesheet" />
    {% endblock %}
</head>

<body>
    <div class="container-fluid">
        {% block topNavbar %}
        <nav class="navbar navbar-default navbar-top">
            <div class="container">
                {% if app.user %}
                    {% block menu_navbar %}
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="{{ path('homepage') }}">Home</a></li>
                            <li><a href="{{ path('analyse') }}">Analyse</a></li>
                        </ul>
                    {% endblock %}
                {% endif %}
                {% block user_navbar %}
                    <div class="pull-right">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                            <button type="button" class="btn btn-default">
                                <a href="{{ path('fos_user_security_logout') }}">
                                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                </a>
                            </button>
                        {% else %}
                            <button type="button" class="btn btn-default">
                                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            </button>
                            <button type="button" class="btn btn-default">
                                <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                            </button>
                        {% endif %}
                    </div>
                {% endblock %}
            </div>
        </nav>
        {% endblock %}
    </div>

    <div class="container-fluid">
        {% if app.user %}
            {% block appWindow %}
            {% endblock %}
        {% else %}
            Bienvenue dans mon application, identifiez-vous
            {% block fos_user_content %}
            {% endblock %}
        {% endif %}
    </div>
</body>
</html>


{% block javascripts %}
    {% javascripts 'global_javascript' %}
        <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/vendor/datatables/media/js/jquery.dataTables.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/vendor/datatables/media/js/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    {% endjavascripts %}

    {#<script src="{{ asset('js/analyse.js') }}" type="text/javascript"></script>#}
{% endblock %}